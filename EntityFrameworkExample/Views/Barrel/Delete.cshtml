    ViewBag.Title = "Delete";
}
<center>
    <h2 class="secondaryColor">DELETE</h2>
</center>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Radius, htmlAttributes: new { @class = "control-label col-md-4 createLabel" })
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Radius)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Height, htmlAttributes: new { @class = "control-label col-md-4 createLabel" })
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt>
            @Html.Label("Construction Material", htmlAttributes: new { @class = "control-label col-md-4 createLabel" })
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ConstructionMaterial)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label col-md-4 createLabel" })
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contents)
        </dd>
