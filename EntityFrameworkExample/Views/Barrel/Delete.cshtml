            @Html.Label("Current Location", htmlAttributes: new { @class = "control-label col-md-4 createLabel" })
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CurrentLocation)
        </dd>
        <dt>
            @Html.Label("Date Created", htmlAttributes: new { @class = "control-label col-md-4 createLabel" })
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
