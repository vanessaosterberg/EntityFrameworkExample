@model EntityFrameworkExample.Models.Barrel

@{
    ViewBag.Title = "Create";
}
<center>
    <h2 class="secondaryColor">CREATE NEW BARREL</h2>
</center>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-1 col-sm-5">
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Radius, htmlAttributes: new { @class = "control-label col-md-2 createLabel" })
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Radius, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Radius, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Height, htmlAttributes: new { @class = "control-label col-md-2 createLabel" })
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3">
                                @Html.Label("Construction Material", htmlAttributes: new { @class = "control-label col-md-2 createLabel" })
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.ConstructionMaterial, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ConstructionMaterial, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3">
                                @Html.Label("Current Location", htmlAttributes: new { @class = "control-label col-md-2 createLabel" })
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.CurrentLocation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CurrentLocation, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label col-md-2 createLabel" })
                            </div>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Contents, new { htmlAttributes = new { @class = "resizer" } })
                                @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-9">
                <div class="form-group">
                    <button type="button" class="linkButton">@Html.ActionLink("Cancel", "Index")</button>
                    <input type="submit" value="Create" class="majorActionButton" />
                </div>
            </div>
        </div>
        

    </div>
}
